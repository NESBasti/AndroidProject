<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/MyTemperatureLinLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/MyTemperature"
                style="@style/WhiteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="99Â°C"
                android:textSize="98dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MyMinMaxTemp"
                style="@style/WhiteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Min/Max"
                android:textSize="24dp"
                app:layout_constraintTop_toBottomOf="@id/MyTemperatureLinLay" />

            <TextView
                android:id="@+id/MyWindchill"
                style="@style/WhiteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Windchill"
                android:textSize="24dp"
                app:layout_constraintTop_toBottomOf="@id/MyMinMaxTemp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/MyIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:src="@drawable/moonrain" />


    </LinearLayout>




</LinearLayout>
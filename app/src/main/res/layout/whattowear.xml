<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/whattowear">
    <View
        android:layout_marginTop="32dp"
        android:id="@+id/MyViewWear"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray"/>

    <TextView
        android:id="@+id/MyWhatToWear"
        style="@style/WhiteText"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="@string/TextViewWhatToWear"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MyViewWear" />
        <LinearLayout
            android:id="@+id/MyWhatToWearShow"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/MyWhatToWear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ClothingDay1"
                android:onClick="MyClothingOpening1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/TextViewToday"/>
                <ImageView
                    android:id="@+id/MyClothes1Icon"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightGray"/>
            <LinearLayout
                android:id="@+id/ClothingDay2"
                android:onClick="MyClothingOpening2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/MyClothes2Day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dienstag"/>
                <ImageView
                    android:id="@+id/MyClothes2Icon"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightGray"/>
            <LinearLayout
                android:id="@+id/ClothingDay3"
                android:onClick="MyClothingOpening3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/MyClothes3Day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mittwoch"/>
                <ImageView
                    android:id="@+id/MyClothes3Icon"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightGray"/>
            <LinearLayout
                android:id="@+id/ClothingDay4"
                android:onClick="MyClothingOpening4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/MyClothes4Day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Donnerstag"/>
                <ImageView
                    android:id="@+id/MyClothes4Icon"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightGray"/>
            <LinearLayout
                android:id="@+id/ClothingDay5"
                android:onClick="MyClothingOpening5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/MyClothes5Day"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Freitag"/>
                <ImageView
                    android:id="@+id/MyClothes5Icon"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/bottomcorners_rounded"
        app:layout_constraintTop_toBottomOf="@id/MyWhatToWearShow"
        android:id="@+id/ClothingLayout">
    <TextView
        android:id="@+id/clothing_informations"

        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Basti, Basti, Basti basti, basti, basti"
        android:textSize="16sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    tools:context=".Forecast_day_5_screen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Vorhersage"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/MyDay5Forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="ButtonDay5Pressed"
        android:orientation="horizontal"
        android:transitionName="transition_day_5">

        <TextView
            android:id="@+id/MyDay5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:text="Tag5" />

        <ImageView
            android:id="@+id/MyDay5Image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:src="@drawable/suncloud" />
    </LinearLayout>
</LinearLayout>
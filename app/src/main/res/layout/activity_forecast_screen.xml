<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:context=".Forecast_screen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text = "Vorhersage"/>
    <LinearLayout
        android:id="@+id/MyDay1Forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:clickable="true"
        android:onClick="ButtonDay1Pressed"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/MyDay1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:text="Tag1" />

        <ImageView
            android:id="@+id/MyDay1Image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:src="@drawable/suncloud" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/MyDay2Forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/MyDay2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:text="Tag2" />

        <ImageView
            android:id="@+id/MyDay2Image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:src="@drawable/heavycloud" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/MyDay3Forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/MyDay3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:text="Tag3" />

        <ImageView
            android:id="@+id/MyDay3Image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:src="@drawable/heavycloudrain" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/MyDay4Forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/MyDay4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:text="Tag4" />

        <ImageView
            android:id="@+id/MyDay4Image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:src="@drawable/sunrain" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/MyDay5Forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/MyDay5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:text="Tag5" />

        <ImageView
            android:id="@+id/MyDay5Image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:src="@drawable/suncloud" />
    </LinearLayout>

</LinearLayout>
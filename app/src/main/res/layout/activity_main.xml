<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/background"
    android:background="@drawable/background_image">


    <TextView
        style="@style/WhiteText"
        android:id="@+id/MyCityName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="City Name"
        android:textSize="60dp"
        android:textAlignment="center"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_weight="1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/WhiteText"
                    android:id="@+id/MyTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99°C"
                    android:textSize="100dp" />

                <ImageView
                    android:id="@+id/MyIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/moonrain" />
            </LinearLayout>

                    <TextView
                        style="@style/WhiteText"
                        android:id="@+id/MyMinTemp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Min Temp: 20°C"
                        android:textSize="40dp" />
                    <TextView
                        style="@style/WhiteText"
                        android:id="@+id/MyMaxTemp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Max Temp: 120°C"
                        android:textSize="40dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                    <TextView
                        style="@style/WhiteText"
                        android:id="@+id/location_result"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="locationresult"
                        android:textSize="30dp" />
                    <ListView
                        style="@style/WhiteText"
                        android:id="@+id/weatherData"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20dp">
                    </ListView>
                    <TextView
                        style="@style/WhiteText"
                        android:layout_marginTop="50dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="City Name"
                        android:textSize="60dp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/WhiteText"
                        android:layout_marginTop="50dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="City Name"
                        android:textSize="60dp"
                        android:textStyle="bold" />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_marginTop="50dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="City Name"
                        android:textSize="60dp"
                        android:textStyle="bold" />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_marginTop="50dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="City Name"
                        android:textSize="60dp"
                        android:textStyle="bold" />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_marginTop="50dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="City Name"
                        android:textSize="60dp"
                        android:textStyle="bold" />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_marginTop="50dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="City Name"
                        android:textSize="60dp"
                        android:textStyle="bold" />
                    <TextView
                        style="@style/WhiteText"
                        android:layout_marginTop="50dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="City Name"
                        android:textSize="60dp"
                        android:textStyle="bold" />



                </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                style="@style/WhiteText"
                android:gravity="right"
                android:id="@+id/MyLastRefresh"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last Refresh: 10:00Uhr"
                android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>